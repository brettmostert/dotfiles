// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+shift+alt+cmd+e",
        "command": "workbench.view.explorer"
    },
    {
        "key": "ctrl+shift+alt+cmd+e",
        "command": "-workbench.view.explorer"
    },
    {
        "key": "ctrl+shift+alt+cmd+e",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "explorerViewletVisible"
    },
    {
        "key": "ctrl+shift+alt+cmd+e",
        "command": "-workbench.action.toggleSidebarVisibility",
        "when": "explorerViewletVisible"
    },
    {
        "key": "ctrl+shift+alt+cmd+z",
        "command": "vim-cheatsheet.open"
    },
    {
        "key": "ctrl+shift+alt+cmd+t",
        "command": "workbench.action.togglePanel",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+alt+cmd+t",
        "command": "workbench.action.terminal.focus",
        "when": "panelVisible && !terminalFocus"
    },
    {
        "key": "ctrl+shift+alt+cmd+t",
        "command": "workbench.action.togglePanel",
        "when": "!panelVisible"
    },
    {
        "key": "ctrl+shift+alt+cmd+t",
        "command": "workbench.action.terminal.focus",
        "when": "!panelVisible"
    },
    {
        "key": "ctrl+shift+alt+cmd+c",
        "command": "workbench.action.toggleAuxiliaryBar",
        "when": "auxiliaryBarFocus"
    },
    {
        "key": "ctrl+shift+alt+cmd+c",
        "command": "workbench.action.focusAuxiliaryBar",
        "when": "!auxiliaryBarVisible ||  !auxiliaryBarFocus"
    },
    {
        "key": "ctrl+shift+alt+cmd+c",
        "command": "workbench.action.toggleAuxiliaryBar",
        "when": "auxiliaryBarVisible && auxiliaryBarFocus"
    },
    {
        "key": "ctrl+shift+alt+cmd+p",
        "command": "workbench.action.pinEditor",
    },
    {
        "key": "ctrl+shift+alt+cmd+p",
        "command": "workbench.action.unpinEditor",
        "when": "activeEditorIsPinned"
    }
]
